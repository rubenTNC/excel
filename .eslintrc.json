{
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "prettier",
    "plugin:@typescript-eslint/recommended"  // Uses the recommended rules from @typescript-eslint/eslint-plugin
  ],
  "parser":  "@typescript-eslint/parser",  // Specifies the ESLint parser
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2015,
    "sourceType": "module"
  },
  "rules": {
    "@typescript-eslint/no-var-requires": 0
  }
}
